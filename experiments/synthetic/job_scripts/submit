#!/bin/bash

# Check if scriptname is provided
if [ $# -ne 1 ]; then
    echo "Usage: $0 <scriptname.jl>"
    exit 1
fi

# Extract scriptname from argument
scriptname="$1"

# Submitting the job
sbatch <<EOT
#!/bin/bash
#SBATCH -J $scriptname
#SBATCH -A UKAEA-AP002-CPU
#SBATCH -p cclake
#SBATCH --output=%j.out
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=32
#SBATCH --time=24:00:00
#SBATCH --mail-type=NONE

unset OMP_NUM_THREADS
export JULIA_NUM_THREADS=64

# Set up environment
. /etc/profile.d/modules.sh
module purge
module load rhel7/default-ccl

# Change directory
cd /home/tab53/rds/rds-ukaea-ap002-mOlK9qn0PlQ/tab53/bayesopt_with_invariances/experiments

# Run the script
julia --project "$scriptname"
EOT
